<div id="embedMediaModal" class="popup">
  <div class='popup-content'>
    <% e.begin_block("embedMediaPopup"); %>
        <h1 data-l10n-id="ep_embedmedia_tweaks.embed">Embed Video</h1>
        <p data-l10n-id="ep_embedmedia_tweaks.code">Paste a link or embed code here:</p>
        <textarea id="embedMediaSrc" rows="10" cols="60"></textarea>
        <div>
            <input type="button" class="embedMediaButton" id="doEmbedMedia" value="Insert video" data-l10n-id="ep_embedmedia_tweaks.insert">
            <input type="button" class="embedMediaButton" id="cancelEmbedMedia" value="Cancel" data-l10n-id="ep_embedmedia_tweaks.cancel">
        </div>
    <% e.end_block(); %>
  </div>
</div>
